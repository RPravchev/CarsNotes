@*@model IEnumerable<FuelInfoViewModel>*@
@model FuelInfoViewModel
@{
    ViewData["Title"] = "Fuel";
    var today = DateTime.Now.ToString("dd-MM-yyyy");
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="Fuel" asp-action="Add" asp-route-id="@TempData["CarId"]" class="btn btn-primary"><i class="fas fa-plus"></i>Add Fuel</a>
    }
</div>
<hr>
<div class="row justify-content-center">
    <div class="col-md-3 text-left" style="margin-top: 20px">
        <form method="get">
        <table @*border="1"*@>
            <thead>
                <tr>
                    <th>Start Date</th>
                    <th>End Date</th>
                </tr>
            <thead>
            <tbody>
                <tr>
                    <th><input type="date" id="@Model.StartDate" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" /></th>
                    <th><input type="date" id="@Model.EndDate" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" /></th>
                </tr>
                <th></th>
                <th style="padding-block: 10px;"><button type="submit" a-right>Filter</button></th>
                <tr>
                    <th><p class="card-text"><small class="text-muted"><b>Total Fuel: </b></small></th>
                    <th><p class="card-text"><small class="text-muted">@Model.TotalFuelQtyForPeriod</small></p></th>
                </tr>
                <tr>
                    <th><p class="card-text"><small class="text-muted"><b>Total Expenses: </b></small></th>
                    <th><p class="card-text"><small class="text-muted">@Model.TotalFuelExpensesForPeriod</small></p></th>
                </tr>
             </tbody>
        </table>
        </form>
    </div>
    <div class="col-md-9" text-left>
        <p> </p>
        <table @*border="1"*@>
            <thead>
                <tr>
                    <th>Date Time</th>
                    <th>GasStation</th>
                    <th>City</th>
                    <th>Volume</th>
                    <th>GasType</th>
                    <th>PricePerLiter</th>
                    <th>PriceFuelTotal</th>
                    <th>KilometrageActual</th>
                </tr>
            </thead>
            <tbody>
                @*@foreach (var fuel in Model)*@
                @for (int i = 0; i < Model.FuelInfos.Count; i++)
                {
                    var expense = Model.FuelInfos[i];
                    var rowClass = i % 2 == 0 ? "even-row" : "odd-row";
                    <tr class="@rowClass">
                        <td><small class="text-muted" style="padding-right: 6px">@expense.Date</small></td>
                        <td><small class="text-muted" style="padding-right: 6px; display: grid; justify-content: center" >@expense.GasStation</small></td>
                        <td><small class="text-muted" style="padding-right: 6px">@expense.City</small></td>
                        <td><small class="text-muted" style="padding-right: 6px; display: grid; justify-content: center" >@expense.Volume</small></td>
                        <td><small class="text-muted" style="padding-right: 6px">@expense.GasType</small></td>
                        <td><small class="text-muted" style="padding-right: 6px; display: grid; justify-content: center" >@expense.PricePerLiter</small></td>
                        <td><small class="text-muted" style="padding-right: 6px">@expense.PriceTotalFuel</small></td>
                        <td><small class="text-muted" style="padding-right: 6px">@expense.KilometrageActual</small></td>
                         <td>
                            <a asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-primary">Edit</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

