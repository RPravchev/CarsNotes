@using CarsNotes.Models
@model CarViewModel
@{
    ViewData["Title"] = @Model.ShortName;
    var today = DateTime.Now.ToString("dd-MM-yyyy");
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 900px;">
    <div class="col-md-6 text-center">
        @if (!string.IsNullOrEmpty(Model.MainImageUrl))
        {
            <img src="@Model.MainImageUrl" class="img-fluid" style="max-width: 100%; height: auto; background-color: #fdf3e6; border-color: #fdf3e6;" alt="@Model.ShortName" />
        }
        else
        {
            <img src="~/img/no-image-available-02.jpg" class="img-fluid" style="max-width: 100%; height: auto;" alt="No Image Available" />
        }
        <p></p>
        <div class="col-md-12 mb-4">
            <div class="card-group d-flex">

                <div class="card h-100 p-1" style="width: auto; background-color: #fdf3e6; border-color: #fdf3e6;">
                    <img src="/Fuel.png" class="card-img-top" style="max-height: object-fit; object-fit: contain;" alt="Care">
                    <a asp-controller="Fuel" asp-action="Index" class="btn btn-primary"><i class="fas fa-plus"></i>Fuel</a>
                </div>
                <div class="card h-100 p-1" style="width: auto; background-color: #fdf3e6; border-color: #fdf3e6;">
                    <img src="/Care.png" class="card-img-top" style="max-height: object-fit; object-fit: contain;" alt="Care">
                    <a asp-controller="Car" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i>Care</a>
                </div>
                <div class="card h-100 p-1" style="width: auto; background-color: #fdf3e6; border-color: #fdf3e6;">
                    <img src="\Legal.png" class="card-img-top" style="max-height: object-fit; object-fit: contain;" alt="Legal">
                    <a asp-controller="Car" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i>Legal</a>
                    @*<p class="card-text">Legal</p>*@
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6" text-left">
        <p class="card-text"><small class="text-muted"><b style="padding-right: 110px">Brand:            </b>@Model.Brand</small></p>
        <p class="card-text"><small class="text-muted"><b style="padding-right: 110px">Model:            </b>@Model.Model</small></p>
        <p class="card-text"><small class="text-muted"><b style="padding-right: 56px">YearProduction:   </b>@Model.YearProduction</small></p>
        <p class="card-text"><small class="text-muted"><b style="padding-right: 10px">KilometrageAcquisition: </b><a>@Model.KilometrageAcquisition</a></small></p>
        <p class="card-text"><small class="text-muted"><b style="padding-right: 30px">KilometrageActual: </b><a>@Model.KilometrageActual</a></small></p>
        <p class="card-text"><small class="text-muted"><b style="padding-right: 90px">VINCode:          </b>@Model.VINCode</small></p>
        <p class="card-text"><small class="text-muted"><b style="padding-right: 35px">TransmissionType: </b><a>@Model.TransmissionType</a></small></p>
        <p class="card-text"><small class="text-muted"><b style="padding-right: 14px">TransmissionNumber: </b><a>@Model.TransmissionNumber</a></small></p>
        <p class="card-text"><small class="text-muted"><b style="padding-right: 94px">FuelType:         </b><a>@Model.FuelType</a></small></p>
        <p class="card-text"><small class="text-muted"><b style="padding-right: 76px">HorsePower:       </b><a>@Model.HorsePower</a></small></p>
        <p class="card-text"><small class="text-muted"><b style="padding-right: 60px">CubicCapacity:    </b><a>@Model.CubicCapacity</a></small></p>
        <p class="card-text"><small class="text-muted"><b style="padding-right: 30px">CountryProduction: </b><a>@Model.CountryProduction</a></small></p>
        <p class="card-text"><small class="text-muted"><b style="padding-right: 86px">BodyType:         </b><a>@Model.BodyType</a></small></p>
        <p class="card-text"><small class="text-muted"><b style="padding-right: 64px">DoorsNumber:      </b><a>@Model.DoorsNumber</a></small></p>
        </div>
    </div>
        <div class="card-footer text-center">
            <div class="d-flex justify-content-between align-items-center">
                <a asp-controller="Car" asp-action="Index" class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1">Back</a>
                <a asp-controller="Car" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1">Edit</a>
                <a asp-controller="Car" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
            </div>
        </div>
    </div>
</div>
