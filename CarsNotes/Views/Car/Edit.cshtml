@model CarViewModel
@{
    ViewData["Title"] = "Edit " + @Model.ShortName;
    var today = DateTime.Now.ToString("dd-MM-yyyy");
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    <a asp-controller="Car" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-plus"></i>Back</a>
</div>
<hr />


<form asp-action="Edit" method="post">
<div class="row justify-content-center" style="margin: 0 auto; max-width: 900px;">
    <div class="col-md-4" style="margin-top: 26px">
        @if (!string.IsNullOrEmpty(Model.MainImageUrl))
        {
            <img src="@Model.MainImageUrl" class="img-fluid" style="max-width: 100%; height: auto; background-color: #fdf3e6; border-color: #fdf3e6;" alt="@Model.ShortName" />
        }
        else
        {
            <img src="~/img/no-image-available-02.jpg" class="img-fluid" style="max-width: 100%; height: auto;" alt="No Image Available" />
        }
        <p></p>
        <div class="col-md-12 mb-4">
            <div class="card-group d-flex">
                <div class="col-sm-6" style="padding-right: 10px; margin-right: 10px;">
                    <label asp-for="@Model.ShortName" class="form-label-add-edit">Short Name</label>
                    <input asp-for="@Model.ShortName" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.ShortName" class="text-danger"></span>
                </div>
            </div>
            <div class="card-group d-flex" style="margin-top: 16px">
                <div class="col-sm-12" style="padding-right: 10px; margin-right: 10px;">
                        <label asp-for="@Model.AdditionalDetails" class="form-label-add-edit">Description</label>
                        <textarea rows="6" asp-for="@Model.AdditionalDetails" class="form-control" aria-required="false" ></textarea>
                        <span asp-validation-for="@Model.AdditionalDetails" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8" text-left>
            <div class="mb-12 d-flex align-items-center">
                <div class="col-sm-6" style="padding-right: 10px; margin-right: 10px;">
                    <label asp-for="@Model.Brand" class="form-label-add-edit">Brand</label>
                    <input asp-for="@Model.Brand" class="form-control" aria-required="false" placeholder="Enter Brand (optional)" />
                    <span asp-validation-for="@Model.Brand" class="text-danger"></span>
                </div>
                <div class="col-sm-6" style="padding-right: 10px; margin-right: 10px;">
                    <label asp-for="@Model.Model" class="form-label-add-edit">Model</label>
                    <input asp-for="@Model.Model" class="form-control" aria-required="false" placeholder="Enter Model (optional)" />
                    <span asp-validation-for="@Model.Model" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-12 d-flex align-items-center">
                <div class="col-sm-6" style="padding-right: 10px; margin-right: 10px;">
                    <label asp-for="@Model.RegistrationNumber" class="form-label-add-edit">Registration Number</label>
                    <input asp-for="@Model.RegistrationNumber" class="form-control" aria-required="true" />
                </div>
                <div class="col-sm-6" style="padding-right: 10px;">
                    <label asp-for="@Model.FuelType" class="form-label-add-edit">Fuel Type</label>
                    <input asp-for="@Model.FuelType" class="form-control" aria-required="false" />
                </div>
            </div>
            <div class="mb-2">
                <label asp-for="@Model.MainImageUrl" class="form-label-add-edit">ImageURL</label>
                <input asp-for="@Model.MainImageUrl" class="form-control" aria-required="false" placeholder="Enter image URL (optional)" />
                <span asp-validation-for="@Model.MainImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-12 d-flex align-items-center">
                <div class="col-sm-4" style="padding-right: 4px; margin-right: 4px;">
                    <label asp-for="@Model.CubicCapacity" class="form-label-add-edit">CubicCapacity</label>
                    <input asp-for="@Model.CubicCapacity" class="form-control" aria-required="false" />
                </div>
                <div class="col-sm-4" style="padding-right: 4px; margin-right: 4px;">
                    <label asp-for="@Model.HorsePower" class="form-label-add-edit">HorsePower</label>
                    <input asp-for="@Model.HorsePower" class="form-control" aria-required="false" placeholder="Enter HorsePower (optional)" />
                </div>
                <div class="col-sm-4" style="padding-right: 4px; margin-right: 4px;">
                    <label asp-for="@Model.DoorsNumber" class="form-label-add-edit">DoorsNumber</label>
                    <input asp-for="@Model.DoorsNumber" class="form-control" aria-required="false" placeholder="Enter DoorsNumber (optional)" />
                </div>
            </div>
            <div class="mb-12 d-flex align-items-center">
                <div class="col-sm-6" style="padding-right: 10px; margin-right: 10px;">
                    <div class="mb-2">
                        <label asp-for="@Model.BodyType" class="form-label-add-edit">BodyType</label>
                        <input asp-for="@Model.BodyType" class="form-control" aria-required="false" placeholder="Enter BodyType (optional)" />
                    </div>
                </div>
                <div class="col-sm-6" style="padding-right: 10px;">
                    <div class="mb-2">
                        <label asp-for="@Model.CountryProduction" class="form-label-add-edit">CountryProduction</label>
                        <input asp-for="@Model.CountryProduction" class="form-control" aria-required="false" placeholder="Enter CountryProduction (optional)" />
                    </div>
                </div>
            </div>
            <div class="mb-12 d-flex align-items-center">
                <div class="col-sm-6" style="padding-right: 10px; margin-right: 10px;">
                    <label asp-for="@Model.KilometrageAcquisition" class="form-label-add-edit">Kilometrage Acquisition</label>
                    <input asp-for="@Model.KilometrageAcquisition" class="form-control" aria-required="false" placeholder="Enter Kilometrage Acquisition (optional)" />
                </div>
                <div class="col-sm-6" style="padding-right: 10px; margin-right: 10px;">
                    <label asp-for="@Model.KilometrageActual" class="form-label-add-edit">KilometrageActual</label>
                    <input asp-for="@Model.KilometrageActual" class="form-control" aria-required="false" placeholder="Enter KilometrageActual (optional)" />
                </div>
            </div>
            <div class="mb-12 d-flex align-items-center">
                <div class="col-sm-6" style="padding-right: 10px; margin-right: 10px;">
                    <label asp-for="@Model.YearAcquisition" class="form-label-add-edit">Year Acquisition</label>
                    <input asp-for="@Model.YearAcquisition" class="form-control" aria-required="true" />
                </div>
                <div class="col-sm-6" style="padding-right: 10px;">
                    <label asp-for="@Model.YearProduction" class="form-label-add-edit">Year of Production</label>
                    <input asp-for="@Model.YearProduction" class="form-control" aria-required="false" placeholder="Enter Year of Production (optional)" />
                </div>
            </div>
            <div class="mb-12 d-flex align-items-center">
                <div class="col-sm-6" style="padding-right: 10px; margin-right: 10px;">
                    <div class="mb-2">
                        <label asp-for="@Model.Color" class="form-label-add-edit">Color</label>
                        <input asp-for="@Model.Color" class="form-control" aria-required="false" />
                    </div>
                </div>
                <div class="col-sm-6" style="padding-right: 10px;">
                    <div class="mb-2">
                        <label asp-for="@Model.OriginalColorCode" class="form-label-add-edit">Color Code</label>
                        <input asp-for="@Model.OriginalColorCode" class="form-control" aria-required="false" />
                    </div>
                </div>
            </div>
            <div class="mb-12 d-flex align-items-center">
                <div class="col-sm-6" style="padding-right: 10px; margin-right: 10px;">
                    <div class="mb-2">
                        <label asp-for="@Model.TransmissionType" class="form-label-add-edit">TransmissionType</label>
                        <input asp-for="@Model.TransmissionType" class="form-control" aria-required="false" placeholder="Enter TransmissionType (optional)" />
                    </div>
                </div>
                <div class="col-sm-6" style="padding-right: 10px;">
                    <div class="mb-2">
                        <label asp-for="@Model.TransmissionNumber" class="form-label-add-edit">TransmissionNumber</label>
                        <input asp-for="@Model.TransmissionNumber" class="form-control" aria-required="false" placeholder="Enter TransmissionNumber (optional)" />
                    </div>
                </div>
            </div>
            <div class="mb-2">
                <label asp-for="@Model.VINCode" class="form-label-add-edit">VINCode</label>
                <input asp-for="@Model.VINCode" class="form-control" aria-required="false" placeholder="Enter VINCode (optional)" />
            </div>
            <div class="mb-2">
                <label asp-for="@Model.ChassisNumber" class="form-label-add-edit">Chassis Number</label>
                <input asp-for="@Model.ChassisNumber" class="form-control" aria-required="false" />
            </div>
            <div class="mb-2">
                <label asp-for="@Model.EngineNumber" class="form-label-add-edit">Engine Number</label>
                <input asp-for="@Model.EngineNumber" class="form-control" aria-required="false"/>
            </div>
            <div class="mb-2">
                <input class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit" value="Save" />
            </div>
    </div>
</div>
</form>
