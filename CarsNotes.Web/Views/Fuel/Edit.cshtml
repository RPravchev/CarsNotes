@model FuelViewModel
@{
    ViewData["Title"] = "Edit Fuel";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    <div>
        <a asp-controller="Fuel" asp-action="Index" asp-route-id="@Model.CarId" class="btn btn-warning"><i class="fas fa-plus"></i>Back</a>
        <a asp-controller="Fuel" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');"><i class="fas fa-plus"></i>Delete</a>
    </div>
</div>
<hr />

<div class="col-sm-12 offset-lg-2 col-lg-8">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">

        <partial name="_FuelViewPartial" />

    </form>
</div>

