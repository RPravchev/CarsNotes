@model FuelViewModel
@{
    ViewData["Title"] = "Add Fuel";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    <a asp-controller="Fuel" asp-action="Index" asp-route-id="@TempData["CarId"]" class="btn btn-warning"><i class="fas fa-plus"></i>Back</a>
</div>
<hr />

<div class="col-sm-12 offset-lg-2 col-lg-8 ">
    <form asp-action="Add" method="post" enctype="multipart/form-data">

        @await Html.PartialAsync("_FuelViewPartial",Model) 

    </form>
</div>

