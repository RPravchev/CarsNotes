@using CarsNotes.Web.Models
@model PlaceViewModel
@{
    ViewData["Title"] = "Edit Place";
    var today = DateTime.Now.ToString("dd-MM-yyyy");
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    <div>
        <a asp-controller="Place" asp-action="Index" asp-route-id="@TempData.Peek("CarId")" class="btn btn-warning"><i class="fas fa-plus"></i>Back</a>
        <a asp-controller="Place" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');"><i class="fas fa-plus"></i>Delete</a>
    </div>
</div>
<hr />

<div class="col-sm-12">
    <form asp-controller="Place" asp-action="Edit" method="post" enctype="multipart/form-data">

        <partial name="_PlaceViewPartial" />

    </form>
</div>
