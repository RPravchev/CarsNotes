
@{
	ViewData["Title"] = "List Users";
}

<h3>
	List of all users
</h3>
<hr>
<div class="row justify-content-left container-fluid">
	<table>
		<thead>
			<tr>
				<th style="padding-right: 30px;">
					Username
				</th>
				<th style="padding-right: 30px;">
					First Name
				</th>
				<th style="padding-right: 30px;">
					Last Name
				</th>
				<th style="padding-right: 30px;">
					Email
				</th>
				<th style="padding-right: 30px;">
					Phone
				</th>
				<th style="padding-right: 30px;">
					Role
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@item.UserName
					</td>
					<td>
						@item.FirstName
					</td>
					<td>
						@item.LastName
					</td>
					<td>
						@item.Email
					</td>
					<td>
						@item.Phone
					</td>
					<td>
						@item.Role
					</td>
					@if (item.IsDeleted == false)
					{
						<td>
							<a asp-controller="Admin" asp-area="Admin" asp-action="DeleteUser" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');"><i class="fas fa-plus"></i>Delete</a>
						</td>
					}
					else
					{
						<td>
							<a asp-controller="Admin" asp-area="Admin" asp-action="ActivateUser" asp-route-id="@item.Id" class="btn btn-success" onclick="return confirm('Are you sure you want to activate this user?');"><i class="fas fa-plus"></i>Activate</a>
						</td>
					}

				</tr>
			}
		</tbody>
	</table>
</div>